<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#B1B1B1"/>
            <padding
                android:right="0dp"
                android:left="0dp"
                android:top="0dp"
                android:bottom="0dp"/>
        </shape>

    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#B1B1B1"/>
            <solid
                android:color="#00000000"/>
            <corners
                android:radius="40dp"/>
        </shape>
    </item>

</layer-list>