<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fl_canvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/canvas_bg"
        app:layout_constraintBottom_toTopOf="@id/ll_color_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_imported" />

        <com.test.drawingapp.DrawingView
            android:id="@+id/drawing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#50FFFFFF"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_color_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/fl_canvas"
        app:layout_constraintBottom_toTopOf="@id/ll_action_btns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/white"
            android:background="@color/white"
            android:contentDescription="@string/color_white_select"
            android:onClick="selectColor"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/black"
            android:background="@color/black"
            android:contentDescription="@string/color_black_select"
            android:onClick="selectColor"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/grey"
            android:background="@color/grey"
            android:contentDescription="@string/color_grey_select"
            android:onClick="selectColor"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/red"
            android:background="@color/red"
            android:contentDescription="@string/color_red_select"
            android:onClick="selectColor"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/blue"
            android:background="@color/blue"
            android:contentDescription="@string/color_blue_select"
            android:onClick="selectColor"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/aqua"
            android:background="@color/aqua"
            android:contentDescription="@string/color_aqua_select"
            android:onClick="selectColor"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/skin"
            android:background="@color/skin"
            android:contentDescription="@string/color_skin_select"
            android:onClick="selectColor"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/brown"
            android:background="@color/brown"
            android:contentDescription="@string/color_brown_select"
            android:onClick="selectColor"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:tag="@color/purple"
            android:background="@color/purple"
            android:contentDescription="@string/color_purple_select"
            android:onClick="selectColor"/>

        <ImageButton
            android:id="@+id/random_color_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/pallet_normal"
            android:background="@drawable/random_color"
            android:tag="@color/random"
            android:contentDescription="@string/color_random_select"
            android:onClick="randomColor"/>


    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_action_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_color_selector"
        >
        <ImageButton
            android:id="@+id/ib_save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3.5dp"
            android:src="@drawable/ic_save"
            android:scaleType="fitXY"
            android:backgroundTint="#e5e5e5"
            android:contentDescription="@string/save_button"
            android:onClick="storagePermissionsWrite"/>

        <ImageButton
            android:id="@+id/ib_gallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3.5dp"
            android:src="@drawable/ic_gallery"
            android:scaleType="fitCenter"
            android:backgroundTint="#e5e5e5"
            android:contentDescription="@string/import_image_button"
            android:onClick="storagePermissionsRead"/>
        <ImageButton
            android:id="@+id/ib_brush"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3.5dp"
            android:src="@drawable/ic_brush"
            android:scaleType="fitCenter"
            android:backgroundTint="#e5e5e5"
            android:contentDescription="@string/brush_selector_icon" />
        <ImageButton
            android:id="@+id/ib_redo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3.5dp"
            android:src="@drawable/ic_redo"
            android:scaleType="fitCenter"
            android:backgroundTint="#e5e5e5"
            android:contentDescription="@string/redo_button"
            android:onClick="redo"/>
        <ImageButton
            android:id="@+id/ib_undo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3.5dp"
            android:src="@drawable/ic_undo"
            android:scaleType="fitCenter"
            android:backgroundTint="#e5e5e5"
            android:contentDescription="@string/undo_button"
            android:onClick="undo"/>
        <ImageButton
            android:id="@+id/ib_clear_all"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3.5dp"
            android:src="@drawable/ic_clear_all"
            android:scaleType="fitCenter"
            android:backgroundTint="#e5e5e5"
            android:contentDescription="@string/clear_all_button"
            android:onClick="clearAll"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>